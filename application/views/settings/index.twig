{% extends "skeleton.twig" %}

{% block css %}
<link href="{{ base_url() }}assets/css/bootstrap-tagsinput.css" rel="stylesheet">
{% endblock %}

{% block style %}
    .bootstrap-tagsinput .tag {
            margin-right: 2px;
            color: #b96114;
        }
{% endblock %}

{% block body %}
    <div class="col-12 mt-3">
        <div class="card border-info">
            <div class="card card-header">
                <form class="was-validated" role="form" enctype="multipart/form-data" method="post">
                    <div class="form-row">
                        <div class="form-group col-12">
                            <div class="row">
                                <label for="user_name" class="col-2 col-form-label">Notifi Email Claim</label>
                                <div class="col-10">
                                    <input name = "email_notify_claim" type="text" value="{{ setting.email_notify_claim }}" data-role="tagsinput" placeholder="Add tags" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <div class="row">
                                <label for="user_name" class="col-2 col-form-label">Notifi Email FI</label>
                                <div class="col-10">
                                    <input name = "email_notify_finance" type="text" value="{{ setting.email_notify_finance }}" data-role="tagsinput" placeholder="Add tags" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <div class="row">
                                <label for="user_name" class="col-2 col-form-label">Url Claim Assistant</label>
                                <div class="col-10">
                                    <input name = "url_cl_ass" type="text" value="{{ setting.url_cl_ass }}"  />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-12">
                            <div class="row">
                                <label for="user_name" class="col-2 col-form-label">User Name Claim Assitants</label>
                                <div class="col-10">
                                    <input name = "user_name_cl_ass" type="text" value="{{ setting.user_name_cl_ass }}" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-12">
                            <div class="row">
                                <label for="user_name" class="col-2 col-form-label">PassWord Claim Assitants</label>
                                <div class="col-10">
                                    <input name = "password_cl_ass" type="text" value="{{ setting.password_cl_ass }}" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Hidden -->
                    <button type="submit" name = 'save_setting' value = "true" class="btn btn-primary"><i class="fas fa-check"></i> Save</button>
                    <a href="{{ base_url() }}index.php/users" class="btn btn-danger" role="button" aria-pressed="true"><i class="fas fa-times"></i> Cancel</a>
                </form>
            </div>
        </div>
    </div>	
{% endblock %}

{% block script %}
<script type="text/javascript" src="{{ base_url() }}assets/js/bootstrap-tagsinput.min.js"></script>
{% endblock %}